{
  "name": "MemoryPalace",
  "version": "1",
  "description": "Family Memory Collection & AI System - Face Recognition Enabled",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "worker": "node worker.js",
    "dev:worker": "nodemon worker.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf uploads/* && rm -rf node_modules",
    "setup": "npm install && mkdir -p uploads public",
    "backup": "node scripts/backup.js",
    "migrate": "node scripts/migrate.js"
  },
  "keywords": [
    "memory",
    "family",
    "ai",
    "face-recognition",
    "photos",
    "voice",
    "offline",
    "gemma",
    "ollama",
    "proactive",
    "websocket"
  ],
  "author": "Memory Palace Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "ffmpeg-static": "^5.2.0",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "sharp": "^0.32.6",
    "sharp-phash": "^2.2.0",
    "socket.io": "^4.7.5",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/memory-palace/hub.git"
  },
  "bugs": {
    "url": "https://github.com/memory-palace/hub/issues"
  },
  "homepage": "https://github.com/memory-palace/hub#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": "off",
      "consistent-return": "off",
      "no-param-reassign": "off"
    },
    "env": {
      "node": true,
      "jest": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "printWidth": 100
  },
  "config": {
    "port": 3000,
    "uploadDir": "./uploads",
    "maxFileSize": "100MB",
    "allowedImageTypes": [
      "jpg",
      "jpeg",
      "png",
      "gif",
      "bmp",
      "webp"
    ],
    "allowedAudioTypes": [
      "mp3",
      "wav",
      "m4a",
      "aac",
      "ogg",
      "webm"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "app.js"
    ],
    "ext": "js,json",
    "ignore": [
      "uploads/*",
      "public/*",
      "node_modules/*",
      "*.test.js"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}